#track-mentors-page
  #nav.lo-nav-bar
    .lo-container
      =link_to "Home", root_path
      =link_to "Language tracks", [:tracks]
      =link_to "#{@track.title} track", @track
      %span Mentors

  .header
    .visual-section
      .line
      .lo-container
        =bordered_turquoise_track_icon(@track, class: 'logo')
    .lo-container
      %h1 #{@track.title} Mentors
      .h1-subtitle Our mentors are the human element behind Exercism, providing empathetic feedback on learners' solutions.

  .lo-container
    .pure-g.people
      -@mentors.each do |mentor|
        .pure-u-1.pure-u-md-1-2= mentor_widget(mentor)
