-title = title_for_track_page(@track, @page)
#generic-page
  #nav.lo-nav-bar
    .lo-container
      =link_to "Language tracks", [:my, :tracks]
      =link_to "#{@track.title} track", [:my, @track]
      %span= title

  .header
    .lo-container
      %h1= title

  .lo-container
    .pure-g
      .pure-u-1.pure-u-md-2-3.lhs
        .content=raw @content

        .links
          %h3 More #{@track.title} resources
          =render "links", track: @track

      .pure-u-1.pure-u-md-1-3
        =code_person_widget
